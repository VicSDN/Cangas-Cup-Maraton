---
import Layout from "../layouts/Layout.astro";
---

<Layout description="Fase Final Cangas Cup" title="Fase final">
  <div class="container mx-auto p-4 text-gray-300">
    <div class="text-center mb-8">
      <h1 class="text-2xl font-bold">Octavos de Final</h1>
    </div>

    <div class="round">
      <div class="match w-full sm:w-3/4 md:w-5/12 lg:w-1/4 mx-auto mb-4">
        <span class="font-bold tracking-wide">1º Octavos de final</span>
        <div class="match-time">15/06 20:00</div>
        <div class="match-team">
          <span>O Palique</span>
        </div>
        <div class="vs">7 vs 0</div>
        <div class="match-team">
          <span>Libreria El Valle</span>
        </div>
      </div>
      <div class="match w-full sm:w-3/4 md:w-5/12 lg:w-1/4 mx-auto mb-4">
        <span class="font-bold tracking-wide">2º Octavos de final</span>
        <div class="match-time">15/06 21:00</div>
        <div class="match-team">
          <span>Green Peppin</span>
        </div>
        <div class="vs">5 vs 0</div>
        <div class="match-team">
          <span>Dog & Roll</span>
        </div>
      </div>
      <div class="match w-full sm:w-3/4 md:w-5/12 lg:w-1/4 mx-auto mb-4">
        <span class="font-bold tracking-wide">3º Octavos de final</span>
        <div class="match-time">15/06 22:00</div>
        <div class="match-team">
          <span>Obrador Flory
          </span>
        </div>
        <div class="vs">0 vs 3</div>
        <div class="match-team">
          <span>Campanillas</span>
        </div>
      </div>
      <div class="match w-full sm:w-3/4 md:w-5/12 lg:w-1/4 mx-auto mb-4">
        <span class="font-bold tracking-wide">4º Octavos de final</span>
        <div class="match-time">15/06 23:00</div>
        <div class="match-team">
          <span>El Plantio</span>
        </div>
        <div class="vs">7 vs 1</div>
        <div class="match-team">
          <span>Deportes Isa</span>
        </div>
      </div>
      <div class="match w-full sm:w-3/4 md:w-5/12 lg:w-1/4 mx-auto mb-4">
        <span class="font-bold tracking-wide">5º Octavos de final</span>
        <div class="match-time">16/06 00:00</div>
        <div class="match-team">
          <span>Astursim</span>
        </div>
