---
import Layout from "../../layouts/Layout.astro";
import teamsData from "../../data/teamsData.json"
---

<Layout
  description="Lista de equipos de la Cangas Cup 2024"
  title="Lista equipos - Cangas Cup Futsal 2024"
>
  <article
    class="col-span-5 relative rounded-xl backdrop-blur-md border border-black shadow-inner shadow-white overflow-hidden group m-20"
  >
    <section class="relative z-20 items-center h-full m-4">
      <ul
        class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4"
      >
        {
          teamsData.map((team, index) => (
            <a href={`/teams/${team.id}`}>
              <li>
                <div
                  class={`p-4 rounded-lg border shadow-md sm:p-8 dark:border-gray-700 ${index % 2 === 0 ? "bg-blue-100" : "bg-green-100"}`}
                >
                  <div class="py-3 sm:py-4 space-y-2">
                    <div>
                      <p class="text-xl font-semibold text-gray-900 truncate dark:text-white">
                        {team.name}
                      </p>
                      <p class="text-base text-gray-500 truncate dark:text-gray-400">
                        {team.location}
                      </p>
                    </div>
                    <div class="text-base font-base text-gray-900 dark:text-white">
                      <span>Grupo</span>
                      <span>{team.group_id}</span>
                    </div>
                  </div>
                </div>
              </li>
            </a>
          ))
        }
      </ul>
    </section>
  </article>
</Layout>
