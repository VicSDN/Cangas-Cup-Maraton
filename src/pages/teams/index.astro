---
import { supabase } from "../../db/supabase";
import Layout from "../../layouts/Layout.astro";
let { data: team, error } = await supabase.from("team").select("*");
---

<Layout
  description="Reglamento Cangas Cup 2024 "
  title="Reglamento - Cangas Cup Futsal 2024"
>
  <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3 m-10">
    {
      team.map((team) => (
        <div class="w-full max-w-sm bg-blue-950 bg-blend-luminosity duration-1000 bg-cover border border-gray-200 rounded-lg shadow-md dark:bg-gray-800 dark:border-gray-700">
          <div class="flex flex-col items-center pb-10">
            <h2 class="w-full text-center text-wrap m-10 mb-3 text-xl font-bold text-blue-100 dark:text-white shadow-lg">
              {team.name}
            </h2>
            <h5 class="mb-1 text-l font-medium text-blue-100 dark:text-white">
              {team.location}
            </h5>
            <span class="text-sm text-gray-400 dark:text-gray-400">
              GRUPO: {team.groupId}
            </span>
            <span class="text-sm text-gray-400 dark:text-gray-400">
              Puntos logrados = {team.points}
            </span>
            <div class="flex mt-4 md:mt-6">
              <a
                href="/${id}"
                class="inline-flex items-center px-4 py-2 text-sm font-medium text-center text-white bg-cyan-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
              >
                Mas detalles
              </a>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</Layout>
