---
import Layout from "../../layouts/Layout.astro";
let { id } = Astro.params;
import { supabase } from "../../db/supabase";
let { data: player, error } = await supabase
  .from("player")
  .select("*")
  .eq("id", id)
  .single();
---

<Layout description="Detalle de jugador" title="Detalle jugador">
  {
    player && (
      <section class="bg-white">
        <div class="mx-auto max-w-screen-xl px-4 py-12 sm:px-6 md:py-16 lg:px-8">
          <div class="mx-auto max-w-3xl text-center">
            <h2 class="text-3xl font-bold text-gray-900 sm:text-4xl">
              {player.name} {player.secondName}
            </h2>

            <p class="mt-4 text-gray-500 sm:text-xl">
              Todos los datos del jugador
            </p>
          </div>

          <div class="mt-8 sm:mt-12">
            <dl class="grid grid-cols-1 gap-4 sm:grid-cols-3 sm:divide-x sm:divide-gray-100">
              <div class="flex flex-col px-4 py-8 text-center">
                <dt class="order-last text-lg font-medium text-gray-500">
                  Goles totales
                </dt>

                <dd class="text-4xl font-extrabold text-blue-600 md:text-5xl">
                  {player.goal}
                </dd>
              </div>

              <div class="flex flex-col px-4 py-8 text-center">
                <dt class="order-last text-lg font-medium text-gray-500">
                  Asistencias
                </dt>

                <dd class="text-4xl font-extrabold text-blue-600 md:text-5xl">
                  {player.assist}
                </dd>
              </div>

              <div class="flex flex-col px-4 py-8 text-center">
                <dt class="order-last text-lg font-medium text-gray-500">
                  MVP
                </dt>

                <dd class="text-4xl font-extrabold text-blue-600 md:text-5xl">
                  {player.mvp}
                </dd>
              </div>
              <div class="flex flex-col px-4 py-8 text-center">
                <dt class="order-last text-lg font-medium text-gray-500">
                  Tarjetas Rojas
                </dt>

                <dd class="text-4xl font-extrabold text-blue-600 md:text-5xl">
                  {player.redCard}
                </dd>
              </div>
              <div class="flex flex-col px-4 py-8 text-center">
                <dt class="order-last text-lg font-medium text-gray-500">
                  Tarjetas Amarillas
                </dt>

                <dd class="text-4xl font-extrabold text-blue-600 md:text-5xl">
                  {player.yellowCard}
                </dd>
              </div>
            </dl>
          </div>
        </div>
      </section>
    )
  }
</Layout>
